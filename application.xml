<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="WordAVGGame" package="WordAVGGame" version="1.0.0" company="Hoothin" />
	
	<!-- output -->
	<app main="Main" file="WordAVGGame" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="800" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<set name="openfl-legacy" />
	<window fullscreen="false" resizable="false" borderless="true"/>
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="unifill" />
	
	<!-- assets -->
	<icon path="assets/favicon.png" />
	<assets path="assets" rename="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>